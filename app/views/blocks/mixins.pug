mixin artistItem(number, img, name, followers, other )
    .artist-item 
        a(href="#").artist-item--left 
            .artist-item--number=number
            .artist-item--avatar
                img(src=img).artist-item--img
                img.artist-item--check(src="./images/icons/check.png")
            .artist-item--info 
                .artist-item--name=name
                .artist-item--follow 
                    img(src="./images/icons/eth.png", alt="").artist-item--icon 
                    .artist-item--numberfollowers=followers
        .artist-item--right
            .artist-item--followers 
                img(src="./images/home/follower-1.jpg").artist-item--imgfollower
                img(src="./images/home/follower-2.jpg").artist-item--imgfollower
                .artist-item--after 
                    img(src="./images/home/follower-3.jpg").artist-item--imgfollower
            .artist-item--other=other

mixin exploreCollectionItem( name, desc, number, percent, ...img)
    a(href="#").explore-collection-item 
        if (img.length === 4)
            .explore-collection-item--top 
                .explore-collection-item--left 
                    img(src=img[0]).explore-collection-item--img
                .explore-collection-item--right 
                    img(src=img[1]).explore-collection-item--img.explore-collection-item--imgtop
                    .explore-collection-item--imgbottom
                        img(src=img[2]).explore-collection-item--img
                        .explore-collection-item--more
                            img(src=img[3]).explore-collection-item--img
        else if img.length === 2 
            .explore-collection-item--top 
                .explore-collection-item--left 
                    img(src=img[0]).explore-collection-item--img
                .explore-collection-item--right 
                    img(src=img[1]).explore-collection-item--img
        else 
            .explore-collection-item--topcolumn
                img(src=img[0]).explore-collection-item--img
        .explore-collection-item--bottom
            .explore-collection-item--info 
                .explore-collection-item--name=name
                .explore-collection-item--desc=desc
            .explore-collection-item--other
                .explore-collection-item--number=number
                .explore-collection-item--percent=percent 

mixin autionsItem(img, collection, title,  avatar, author, number)
    a(href="#").autions-item 
        .autions-item--top 
            .autions-item--image 
                img(src=img).autions-item--img
                .autions-item--place Place a bid
            .autions-item--collection=collection
            .autions-item--title=title
        .autions-item--middle 
            .autions-item--left 
                +itemItem("Current bid", "300 ETH", "$130,729.12")
            .autions-item--right
                +itemItem("Auction ending in", "03d : 25h : 05m", "Bids: 25")
        .autions-item--bottom
            .autions-item--artist 
                img(src=avatar).autions-item--avatar 
                .autions-item--author=author 
            .autions-item--like 
                i.fa.fa-heart.autions-item--icon 
                .autions-item--number=number
mixin itemItem(name, strong, other)
    .autions-item--name= name
    strong.autions-item--strong=strong
    .autions-item--other=other
//- mixin của popular.pug
mixin popularItem(img1, img2, img3, img4, name, desc, number, percent)
    a(href="collection.html").popular-item 
        .popular-item--top 
            .popular-item--left 
                img(src=img1).popular-item--img
            .popular-item--right 
                img(src=img2).popular-item--img.popular-item--imgtop
                .popular-item--imgbottom
                    img(src=img3).popular-item--img
                    .popular-item--more
                        img(src=img4).popular-item--img
        .popular-item--bottom
            .popular-item--info 
                .popular-item--name=name
                .popular-item--desc=desc
            .popular-item--other
                .popular-item--number=number
                .popular-item--percent=percent

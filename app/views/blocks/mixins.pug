mixin nftsItem(img, price, desc,number,  offer, time)
    a.result-item(href="#") 
        .result-item--top 
            img(src=img).result-item--img
        .result-item--content 
            .result-item--info
                .result-item--collection Collection name
                .result-item--name NFT name Ex Shiba Astronaut
            .result-item--more
                .result-item--left
                    .result-item--text=price
                    .result-item--desc=desc
                    .result-item--other=number
                .result-item--right
                    .result-item--text=offer
                    .result-item--desc=desc
                    .result-item--other 
                        i.fal.fa-clock
                        span=time
mixin activitiesItem(img, type, name, time, btn) 
    .activities-item(data-type=type)
        .activities-item--info 
            img(src=img).activities-item--img 
            .activities-item--desc 
                .activities-item--type=type
                .activities-item--name=name
                .activities-item--time  
                    i.fal.fa-clock 
                    span=time
        .activities-item--btn=btn
mixin artistCollectionItem(name, author, datetime, ...img)
    .artist-list--item 
        .artist-list--other 
            .artist-list--info 
                .artist-list--name
                    .artist-list--text=name 
                    .artist-list--author=author
                .artist-list--datetime=datetime
            .artist-list--gallery
                if (img.length === 4)
                    .artist-list--gallery4
                        each val, key in img
                            if (key === 3) 
                                .artist-list--img
                                    img(src=val, alt="")
                                    .artist-list--desc <span> +12 </span> Other items in this collections 
                            else 
                                img(src=val, alt="").artist-list--img
                    .artist-list--more 
                        a(href="").artist-list--btn View Collection
                else if (img.length===3)
                    .artist-list--gallery3
                        each val in img
                            img(src=val, alt="").artist-list--img
                    .artist-list--more 
                        a(href="").artist-list--btn View Collection
                else if (img.length===2)
                    .artist-list--gallery2
                        each val in img
                            img(src=val, alt="").artist-list--img
                    .artist-list--more 
                        a(href="").artist-list--btn View Collection
            

    
